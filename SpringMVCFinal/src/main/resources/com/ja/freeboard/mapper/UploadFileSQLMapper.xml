<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ja.freeboard.mapper.UploadFileSQLMapper">

	<!-- 파일 업로드 -->
	<insert id="insert">
	<![CDATA[
		INSERT INTO FB_Upload_File
		VALUES(
			FB_Upload_File_seq.nextval, 
			#{board_no}, 
			#{file_link_path}, 
			#{file_real_path}, 
			SYSDATE
		)
	]]>
	</insert>
	
	<!-- 업로드된 파일 읽어오기 -->
	<select id="selectByBoardNo" resultType="com.ja.freeboard.vo.UploadFileVo">
	<![CDATA[
		SELECT * 
		FROM FB_Upload_File
		WHERE board_no=#{board_no}
	]]>
	</select>
		<!-- 업로드된 파일 읽어오기 -->
	<select id="selectByFileNo" resultType="com.ja.freeboard.vo.UploadFileVo">
	<![CDATA[
		SELECT * 
		FROM FB_Upload_File
		WHERE file_no=#{file_no}
	]]>
	</select>
</mapper>